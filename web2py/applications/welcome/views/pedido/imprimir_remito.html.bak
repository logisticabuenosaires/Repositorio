{{extend 'layout.html'}}
<html>
<head>
  <meta content="text/html; charset=UTF-8" http-equiv="content-type">
  <style type="text/css">
body { margin-left: 10%; margin-right: 10%; }
#maintable { border-collapse: collapse; }
#maintable td { border: 1px solid #000; padding: 10px;}
#titletable td { border: 0px solid #000; }
#righttable td { border: 0px solid #000; }
  </style>
  <title>Boleta</title>
</head>
<body>
<center>
<form><input type="button" value=" Imprimir "
onclick="window.print();return false;" /></form>
<table id="maintable">
  <tbody>
    <tr>
      <td colspan="2">
      <table id="titletable">
        <tbody>
          <tr>
            <td> <img style="width: 106px; height: 100px;" alt="FIP" src="{{=URL(r=request,c="static",f="fip.png")}}"> </td>
            <td style="text-align: center;">
            <p> Boleta de Pago Nº {{=pedido.id}} </p>
            <p style="text-align: center;"><b>Logistica patagones</b></p>
            <b> Aluar asociados</b></td>
          </tr>
        </tbody>
      </table>
      </td>
    </tr>
    <tr>
      <td rowspan="2">
          <p> Empleador:&nbsp;<b>{{=asociado.nombre}} </b></p>
          <p> Domicilio: {{=asociado.domicilio}} </p>
          <p> Localidad: {{=asociado.localidad}} ({{=partido.nombre}}) </p>
          <p> CUIT. Emp.:&nbsp;<b>{{=asociado.cuit}} </b></p>
          <p style="height: 10px;"></p>
          <p> Remuneración Total:&nbsp;<b>${{="%0.2f" % boleta.total_sueldo}}</b><span style="font-weight: bold;"></span><b>
      </b></p>
      <p> {{=subente.concepto}}::&nbsp;<b>{{=subente.porcentaje}} %</b></p>
      </b></p>
      <p> TOTAL:&nbsp;<b>${{="%0.2f" % boleta.importe}}</b></p>
      </td>
      <td style="height: 50%;">
      <p><b> {{=subente.nombre}} </b></p>
      <p>Código: {{=subente.codigo}} </p>
      </td>
    </tr>
    <tr>
      <td>
      <p> <b>Año: {{=boleta.anio}} </b></p>
      <p> <b>Mes: {{=boleta.mes}} </b></p>
      <p> <b>Cant. Pers: {{=boleta.cant_empleados}} </b></p>
      <p> <b>1º Venc.:&nbsp;</b><b> {{=boleta.venc1.strftime("%d/%m/%y")}} </b></p>
      <p> <b>2º Venc.:&nbsp;</b><b> {{=boleta.venc2.strftime("%d/%m/%y")}} </b></p>
      </td>
    </tr>
    <tr>
      <td style="text-align: center;" colspan="2">  <p> <b> Empresa de logistica Patagones: CUIT 20-2345654-1</b></p>
        <p> <b> Fecha de impresion 23/11/2012</b></p>
         <p> <b>Habilitacion municipal N°13233</b></p>
      </td>
    </tr>
    <tr>
      <td colspan="2">
      <p style="text-align: center;"> Talón para el Banco de la Provincia</p>
      </td>
    </tr>
  </tbody>
</table>
</center>
</body>
</html>
