def remove_from_cart():
    # remove product from cart
    del session.cart[int(request.args[0])]
    redirect(URL(r=request, f='ver_carrito'))

def empty_cart():
    #carrito vac√≠o de todos los productos
    session.cart.clear()
    session.balance = 0
    redirect(URL(r=request, f='comprar'))
